
[DEFAULT]

bantime = 3600      # 1 Stunde
findtime = 600      # 10 Minuten
maxretry = 3        # 3 Versuche
banaction = nftables-multiport
chain = input
logtarget = /var/log/fail2ban.log
loglevel = INFO

[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/secure
backend = systemd
maxretry = 3

[recidive]
enabled = true
filter = recidive
logpath = /var/log/fail2ban.log
bantime = 86400     # 24 Stunden
findtime = 86400    # 24 Stunden
maxretry = 2
